####################
# compiler options #
####################

CC = gcc -m64
CXX = g++ -m64
CPPFLAGS = -g -pedantic -pedantic-errors -Wall -Wno-deprecated 
CFLAGS = -g -fPIC 

######################
# directory settings #
######################
SOURCEDIR = source/
OBJECTDIR = object/
DEBUGDIR  = debug/
EXENAME   = vasp
EXEPATH   = $(DEBUGDIR)$(EXENAME)
DEFINES   = 
INCLUDES  = 





###################################################################################
###   #   # ###   ##  #############################################################
### #### ## ### ### ###############################################################
###  ### ## ###  ### ##############################################################
### #### ## ### ##### #############################################################
### ###   #   #   #  ##############################################################
###################################################################################

C_OBJS = \
$(OBJECTDIR)set.o \
$(OBJECTDIR)prime.o \

BATCH_OBJS = \
$(OBJECTDIR)main.o \
$(OBJECTDIR)mathlib.o \
$(OBJECTDIR)triIntersect.o \
$(OBJECTDIR)CubeTable.o \
$(OBJECTDIR)SurfaceObject.o \
$(OBJECTDIR)surfProcessing.o \
$(OBJECTDIR)Lattice.o \
$(OBJECTDIR)progressBar.o \
$(OBJECTDIR)csg.o \


###################################################################################
####  ##  ## ### #   ##   # ####  ##   #   ##  ## ## ##############################
### ### ## #  #  # ## ## ## ### ## ## ### ## ## #  # ##############################
### ### ## # # # #   ### ## ###    ## ### ## ## # #  ##############################
### ### ## # ### # ##### ## ### ## ## ### ## ## # ## ##############################
####  ##  ## ### # ####   #   # ## ## ##   ##  ## ## ##############################
###################################################################################

all: $(BATCH_OBJS) $(C_OBJS)
	$(CXX) $(CPPFLAGS) -o $(EXEPATH) $(BATCH_OBJS) $(C_OBJS) $(LIBS) $(INCLUDES)

################
# Dependencies #
################

$(BATCH_OBJS): $(OBJECTDIR)%.o: $(SOURCEDIR)%.cpp
	$(CXX) -c $(CPPFLAGS) $< -o $@ $(INCLUDES)

$(C_OBJS): $(OBJECTDIR)%.o: $(SOURCEDIR)%.c
	$(CC) -c $(CFLAGS) $< -o $@ $(INCLUDES)



###################################################################################
####  # ###   ##  ## ## ###########################################################
### ### ### ### ## #  # ###########################################################
### ### ###  ##    # #  ###########################################################
### ### ### ### ## # ## ###########################################################
####  #   #   # ## # ## ###########################################################
###################################################################################

clean:
	rm -rf $(BATCH_OBJS) $(C_OBJS) $(EXEPATH) object/*





